# ===========================================
# DashLogistics - Environment Configuration
# ===========================================

# --- Database Configuration ---
# Primary database connection (full URL)
DATABASE_URL=postgresql://postgres:admin@localhost:5432/shipping_db

# Alternative: Supabase (managed PostgreSQL)
# SUPABASE_URL=https://<your-project>.supabase.co
# SUPABASE_KEY=<your-supabase-service-key>

# --- Data Paths ---
# Raw data download path
RAW_DATA_PATH=data/raw/shipping_data.csv

# Clean data output path
CLEAN_DATA_PATH=data/clean/shipping_data_clean.csv

# Source dataset URL
DATA_URL=https://raw.githubusercontent.com/plotly/datasets/master/2014_usa_states.csv

# --- API Keys for Data Enrichment ---
# WeatherAPI.com (recommended - 1M calls/month free)
WEATHERAPI_KEY=your_weatherapi_key_here

# OpenWeather (fallback - 60 calls/minute free)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# --- Pipeline Configuration ---
# Unique run ID for traceability (auto-generated if not provided)
PIPELINE_RUN_ID=

# --- Logging Configuration ---
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# --- Development/Production Flags ---
# Set to True for development mode
DEV_MODE=True

# --- Optional: External API Keys for Future Expansion ---
# EIA API (for better fuel price data)
EIA_API_KEY=your_eia_api_key_here

# NOAA API (for climate data)
NOAA_API_KEY=your_noaa_api_key_here

# Census API (for economic data)
CENSUS_API_KEY=your_census_api_key_here
